    //Conversion larga 
    var Celcius1= prompt("Introduzca la temperatur en Â° Celcius");
    Celsius = parseFloat (Celcius1);

    //Conversion corta
    var Celcius1 = parseFloat (prompt("introduzca la temperatura en grados"));

    //Procedo a hacer la conversion de Celcius a Farenheit: 
    var Farenheit = 9/5* Celsius1 + 32;
    document.write("De Celcius a Farenheit es: ", Farenheit);